generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Member {
  id            String   @id @default(cuid())
  studentId     String   @unique
  name          String
  email         String   @unique
  phone         String
  department    String   
  semester      String
  experience    String   
  whyJoin       String   
  aboutYourself String   
  cvLink        String?
  status        String   @default("pending")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([department])
} 