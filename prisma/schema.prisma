generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id            String   @id @default(cuid())
  studentId     String   @unique
  name          String
  email         String   @unique
  phone         String
  department    String   
  semester      String
  cvLink        String?
  status        String   @default("pending")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([department])
} 